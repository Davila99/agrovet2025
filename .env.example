# .env.example - plantilla para Railway / despliegue
SECRET_KEY=replace-me-with-a-secure-key
DEBUG=False
ALLOWED_HOSTS=your-app.railway.app,*.railway.app,localhost

# DATABASE (Railway suele exponer DATABASE_URL en formato mysql://user:pass@host:port/db)
DATABASE_URL=
# Alternativa (variables separadas)
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=3306

# Channels / Redis
USE_REDIS_CHANNELS=1
REDIS_URL=redis://:password@redis-host:6379

# Supabase (si aplica)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_BUCKET=

DJANGO_SETTINGS_MODULE=consultveterinarias.settings
STATIC_ROOT=/tmp/staticfiles